# CRE8.pw Environment Configuration (Local Development)
#
# This file is for local development only.
# NEVER commit this file to version control.
#
# Copy from .env.example and configure for your local environment.

APP_NAME=CRE8.pw
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

DB_HOST=localhost
DB_PORT=3306
DB_NAME=cre8pw_dev
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_bin
DB_SSL_MODE=DISABLED

JWT_ALGO=RS256
JWT_PRIVATE_KEY_PATH=keys/private.pem
JWT_PUBLIC_KEY_PATH=keys/public.pem
JWT_ISSUER=http://localhost:8000
JWT_AUDIENCE=http://localhost:8000/console
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=2592000
JWT_LEEWAY=10

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With
CORS_EXPOSED_HEADERS=X-Total-Count,X-Page-Number

CSP_DEFAULT_SRC="'self' http://localhost:8000"

CSRF_SECRET=dev_secret_change_in_production_32chars

RATE_LIMIT_GENERAL=1000 per minute
RATE_LIMIT_AUTH=100 per minute
RATE_LIMIT_API=600 per minute
RATE_LIMIT_BACKING=memory

HTTP_TIMEOUT=30
HTTP_RETRY_MAX=3

LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_PATH=logs

APIKEY_HASH_ALGO=argon2id
PASSWORD_MEMORY_COST=65536
PASSWORD_TIME_COST=4
PASSWORD_PARALLELISM=1
